      <!-- BANNER SLIDER
      ================================================== -->
      <div id="myCarousel" class="carousel slide hidden-xs" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
          <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          <div class="item slide-one active">
            <div class="container">
              <div class="carousel-caption">
              </div>
            </div>
          </div>


          {{#foreach posts}}
            {{#if featured}}
                <div class="item slide-four" style="background:{{#if image}}url({{image}});{{else}}url{{asset "./content/images/church.jpg"}}{{/if}}; background-repeat: no-repeat; background-size: cover; background-position: 50% 50%;">
                  <div class="container">
                    <div class="carousel-caption" style="color:#03437a; top:15%">
                      <article class="{{post_class}} featured" style="background-color:rgba(230,239,239,0.95); padding:40px;border:10px solid #03437a;">
                         <header class="post-header">
                             <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                          </header>
                        </article>                                    
                     </div>
                    </div>
                  </div>  
              {{/if}}
            {{/foreach}}        
          </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a> </div>
